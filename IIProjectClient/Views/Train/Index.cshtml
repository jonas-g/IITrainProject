@model IEnumerable<IIProjectClient.Models.VehiclePassage>

@{
    ViewBag.Title = "Index";
}

<header>
    <h2>Search</h2>
</header>
<body>

    @* Starttime, Datettime, rullista med alla platser, söka på fordon. *@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <div class="float-left">
                <legend>Search</legend>


                <h3>From date</h3>
                <p>@Html.TextBox("from", null, new { @class = "datePicker" })</p>

                <h3>To date</h3>
                <p>@Html.TextBox("to", null, new { @class = "datePicker" })</p>
            </div>

            <div>
                @Html.DropDownList("locationValue", (SelectList)ViewBag.DropDownValues)
            </div>
            
            <p>
                <input id="submitButton" type="submit" value="Search" />
            </p>

            @if (Model != null)
            {
                //Servicemeddelande här?
                <table>
                    <tr>
                        <th>
                            Time
                        </th>
                        <th>
                            Vehicle EPC
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehicle.EPC)
                        </td>
                        <td>
                            View Details
                        </td>
                    </tr>
                    }
                </table>
            }

        </fieldset>

        <script type="text/javascript">
                $(document).ready(function () {
                    $(".datePicker").datepicker({ dateFormat: 'yy/m/d', changeYear: true, defaultDate: '-6y' });
                });
        </script>
    }
</body>
