@model System.Xml.Linq.XElement

@{
    ViewBag.Title = "Index";
}

<header>
    <h2>Search</h2>
</header>
<body>

    @* Starttime, Datettime, rullista med alla platser, söka på fordon. *@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <ul>
                <li>
                    <div class="left">
                        <h3>From date</h3>
                        <h3>To date</h3>
                    </div>
                    <div class="right">
                        <p>@Html.TextBox("from", null, new { @class = "datePicker" })</p>
                        <p>@Html.TextBox("to", null, new { @class = "datePicker" })</p>
                    </div>
                </li>
                <li>
                    <div id="dropDownLi">
                        @Html.DropDownList("locationValue", (SelectList)ViewBag.DropDownValues, new { id = "dropDown" })
                    </div>
                </li>
                <li>
                    <div id="submitButtonLi">
                        <input id="submitButton" type="submit" value="Search" />
                    </div>
                </li>
            </ul>   

            @if (Model != null)
            {
                foreach (var item in Model.Descendants("Passage"))
                {
                    @Html.Raw(item.Value);
                }
            }

        </fieldset>

        <script type="text/javascript">
                $(document).ready(function () {
                    $(".datePicker").datepicker({ dateFormat: 'yy/m/d', changeYear: true, defaultDate: '-6y' });
                });
        </script>
    }
</body>
